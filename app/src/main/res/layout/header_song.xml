<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_header_song"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header_song_play_all"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/play_all" />

        <LinearLayout
            android:id="@+id/llyt_header_song_play_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="播放全部"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_header_song_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="0首"
                android:textSize="8sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_header_song_handler"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/song_handler" />
    </LinearLayout>

    <include layout="@layout/layout_line" />
</LinearLayout>