<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_pub_color_white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_above="@+id/iv_bg01"
        android:layout_centerHorizontal="true"
        android:src="@drawable/module_common_bg_welcome00"
        app:layout_heightPercent="60%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%" />

    <ImageView
        android:id="@+id/iv_bg01"
        android:layout_above="@+id/iv_dot0"
        android:layout_centerHorizontal="true"
        android:src="@drawable/module_common_bg_welcome01"
        app:layout_heightPercent="18%"
        app:layout_marginBottomPercent="2%"
        app:layout_widthPercent="90%" />

    <ImageView
        android:id="@+id/iv_dot0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/module_common_bg_welcome02"
        android:visibility="invisible"
        app:layout_heightPercent="5%"
        app:layout_marginBottomPercent="6%"
        app:layout_widthPercent="90%" />
</androidx.percentlayout.widget.PercentRelativeLayout>