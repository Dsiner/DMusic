<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/line_middle"
        layout="@layout/lib_pub_layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_pub_dimen_dialog_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lib_pub_color_trans"
            android:gravity="center"
            android:text="@string/lib_pub_cancel"
            android:textAllCaps="false"
            android:textColor="@color/lib_pub_color_main"
            android:textSize="@dimen/lib_pub_dimen_text_main"
            android:textStyle="normal" />

        <include
            android:id="@+id/line_bottom"
            layout="@layout/lib_pub_layout_line"
            android:layout_width="@dimen/lib_pub_dimen_line_height"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lib_pub_color_trans"
            android:gravity="center"
            android:text="@string/lib_pub_ok"
            android:textAllCaps="false"
            android:textColor="@color/lib_pub_color_main"
            android:textSize="@dimen/lib_pub_dimen_text_main"
            android:textStyle="normal" />
    </LinearLayout>
</merge>